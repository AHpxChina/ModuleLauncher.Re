<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ModuleLauncher.Example.ViewModels"
             xmlns:authenticators="clr-namespace:ModuleLauncher.Example.ViewModels.Authenticators"
             xmlns:authenticators1="clr-namespace:ModuleLauncher.Example.Views.Authenticators"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ModuleLauncher.Example.Views.AuthenticatorsView">

    <Design.DataContext>
        <authenticators:MojangAuthenticatorViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel>
            <authenticators1:MojangAuthenticatorView />

            <TabItem IsSelected="True" Header="MicrosoftAuthenticator" FontSize="18" />
            <TabItem IsSelected="True" Header="OfflineAuthenticator" FontSize="18" />
        </StackPanel>
    </ScrollViewer>
</UserControl>